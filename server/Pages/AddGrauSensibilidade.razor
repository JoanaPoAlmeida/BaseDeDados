@page "/add-grau-sensibilidade"
@layout MainLayout
@inherits Radnet.Pages.AddGrauSensibilidadeComponent

@using Radzen
@using Radzen.Blazor
@using Radnet.Models.RadnetBd
<RadzenContent Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm Data="@grausensibilidade" Visible="@(grausensibilidade != null)" TItem="Radnet.Models.RadnetBd.GrauSensibilidade" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Limite Maximo" Component="limite_maximo" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(grausensibilidade.limite_maximo)" Name="Limite_maximo">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="Limite_maximo" Text="limite_maximo is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Text="Limite Minimo" Component="limite_minimo" style="width: 100%">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(grausensibilidade.limite_minimo)" Name="Limite_minimo">
                </RadzenNumeric>
                <RadzenRequiredValidator Component="Limite_minimo" Text="limite_minimo is required" style="position: absolute">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonType="ButtonType.Submit" Icon="save" Text="Save" ButtonStyle="ButtonStyle.Primary">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" style="margin-left: 1rem" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
